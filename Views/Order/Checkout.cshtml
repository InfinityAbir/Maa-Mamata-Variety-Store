@model List<Ecommerce.Models.CartItem>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container my-5">
    <h2 class="mb-4 text-center text-primary">Checkout</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            Your cart is empty!
        </div>
    }
    else
    {
        <div class="row">
            <!-- Customer Info Form -->
            <div class="col-md-6">
                <div class="card p-4 shadow-sm">
                    <h4 class="mb-3">Shipping Information</h4>
                    <form asp-action="PlaceOrder" method="post">
                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input type="text" name="name" class="form-control" placeholder="Enter your full name" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" name="email" class="form-control" placeholder="Enter your email" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Address</label>
                            <input type="text" name="address" class="form-control" placeholder="Enter your address" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Phone</label>
                            <input type="text" name="phone" class="form-control" placeholder="Enter your phone number" required />
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex gap-2 mt-3">
                            <a asp-controller="Cart" asp-action="Index" class="btn btn-secondary w-50">Back to Cart</a>
                            <button type="submit" class="btn btn-success w-50">Place Order (Cash on Delivery)</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-md-6 mt-4 mt-md-0">
                <div class="card p-4 shadow-sm">
                    <h4 class="mb-3">Order Summary</h4>
                    <ul class="list-group mb-3">
                        @foreach (var item in Model)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @item.ProductName x @item.Quantity
                                <span>৳@((item.Price * item.Quantity).ToString("N0"))</span>
                            </li>
                        }
                    </ul>
                    <div class="d-flex justify-content-between fw-bold fs-5">
                        <span>Total:</span>
                        <span>৳@Model.Sum(c => c.Price * c.Quantity).ToString("N0")</span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
