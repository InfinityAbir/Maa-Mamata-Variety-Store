@model IEnumerable<Ecommerce.Models.Order>

@{
    ViewData["Title"] = "Manage Orders";
}

<div class="container py-4">
    <h2 class="mb-4 text-primary">Manage Orders</h2>

    <!-- Display success/error messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No orders found.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle mb-0 bg-white">
                <thead class="table-dark">
                    <tr>
                        <th>Order ID</th>
                        <th>Customer Name</th>
                        <th>Email</th>
                        <th>Subtotal</th>
                        <th>Delivery</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Order Date</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        var subtotal = order.TotalAmount - order.DeliveryCharge;
                        <tr>
                            <td>@order.OrderId</td>
                            <td>@order.CustomerName</td>
                            <td>@order.CustomerEmail</td>
                            <td class="fw-bold text-dark">৳@subtotal.ToString("N0")</td>
                            <td class="fw-bold text-dark">৳@order.DeliveryCharge.ToString("N0")</td>
                            <td class="fw-bold text-success">৳@order.TotalAmount.ToString("N0")</td>
                            <td>
                                @switch (order.Status)
                                {
                                    case "Pending":
                                        <span class="badge bg-warning text-dark">@order.Status</span>
                                        break;
                                    case "Completed":
                                        <span class="badge bg-success">@order.Status</span>
                                        break;
                                    case "Processing":
                                        <span class="badge bg-info text-dark">@order.Status</span>
                                        break;
                                    case "Shipped":
                                        <span class="badge bg-primary text-white">@order.Status</span>
                                        break;
                                    case "Cancelled":
                                        <span class="badge bg-secondary text-white">@order.Status</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@order.Status</span>
                                        break;
                                }
                            </td>
                            <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-primary me-1">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>

                                <form asp-action="Delete" asp-route-id="@order.OrderId" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this order?');">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>

                                <a asp-action="Print" asp-route-id="@order.OrderId" target="_blank" class="btn btn-sm btn-outline-secondary ms-1">
                                    <i class="bi bi-printer"></i> Print
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<style>
    .table th, .table td {
        vertical-align: middle;
    }

    .badge {
        font-size: 0.9rem;
        padding: 5px 10px;
    }

    .btn {
        font-weight: 500;
    }
</style>
