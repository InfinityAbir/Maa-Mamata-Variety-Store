@model Ecommerce.Models.Order

@{
    ViewData["Title"] = "Edit Order";
}

<div class="container py-4">
    <h2 class="mb-4 text-primary">Edit Order #@Model.OrderId</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="OrderId" />

                <!-- Customer Info -->
                <div class="mb-3">
                    <label class="form-label">Customer Name</label>
                    <input class="form-control" value="@Model.CustomerName" disabled />
                </div>

                <div class="mb-3">
                    <label class="form-label">Customer Email</label>
                    <input class="form-control" value="@Model.CustomerEmail" disabled />
                </div>

                <div class="mb-3">
                    <label class="form-label">Customer Address</label>
                    <input class="form-control" value="@Model.CustomerAddress" disabled />
                </div>

                <div class="mb-3">
                    <label class="form-label">Customer Phone</label>
                    <input class="form-control" value="@Model.CustomerPhone" disabled />
                </div>

                <!-- Order Amounts -->
                <div class="mb-3">
                    <label class="form-label">Subtotal</label>
                    <input class="form-control" value="৳@(Model.TotalAmount - Model.DeliveryCharge)" N0")" disabled />
                </div>

                <div class="mb-3">
                    <label class="form-label">Delivery Charge</label>
                    <input class="form-control" value="৳@Model.DeliveryCharge.ToString("N0")" disabled />
                </div>

                <div class="mb-3">
                    <label class="form-label">Total Amount</label>
                    <input class="form-control" value="৳@Model.TotalAmount.ToString("N0")" disabled />
                </div>

                <!-- Order Status -->
                <div class="mb-3">
                    <label for="Status">Order Status</label>
                    @Html.DropDownListFor(model => model.Status,
                    new SelectList(new List<string> {
                                        "Pending", "Processing", "Shipped", "OutForDelivery", "Delivered", "Cancelled"
                                        }, Model.Status),
                                        new { @class = "form-control" })
                </div>

                <!-- Payment Method -->
                <div class="mb-3">
                    <label asp-for="PaymentMethod" class="form-label">Payment Method</label>
                    <select asp-for="PaymentMethod" class="form-select">
                        <option value="Cash on Delivery" selected="@Model.PaymentMethod == " Cash on Delivery"">Cash on Delivery</option>
                    </select>
                </div>

                <!-- Actions -->
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                    <a asp-action="Manage" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Orders
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
