@model Ecommerce.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<div class="container py-4">
    <h2 class="mb-4 text-danger">Delete Order #@Model.OrderId</h2>

    <div class="card shadow-sm border-danger">
        <div class="card-body">
            <p class="lead">Are you sure you want to delete this order?</p>

            <ul class="list-group mb-3">
                <li class="list-group-item"><strong>Customer Name:</strong> @Model.CustomerName</li>
                <li class="list-group-item"><strong>Email:</strong> @Model.CustomerEmail</li>
                <li class="list-group-item"><strong>Total:</strong> @Model.TotalAmount.ToString("C")</li>
                <li class="list-group-item"><strong>Status:</strong> @Model.Status</li>
                <li class="list-group-item"><strong>Order Date:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</li>
            </ul>

            <form asp-action="Delete" method="post" onsubmit="return confirm('This action cannot be undone. Are you sure?');">
                <input type="hidden" asp-for="OrderId" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="bi bi-trash"></i> Delete
                </button>
                <a asp-action="Manage" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
