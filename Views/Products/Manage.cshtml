@model IEnumerable<Ecommerce.Models.Product>
@using Microsoft.AspNetCore.Http

@{
    var userRole = Context.Session.GetString("UserRole");
}

<h2>Manage Products</h2>

@if (userRole == "Admin")
{
    <p>
        <a asp-action="Create" class="btn btn-success">Add New Product</a>
    </p>
}

<!-- Low Stock Alert -->
@if (ViewBag.LowStockProducts != null && (ViewBag.LowStockProducts as List<Ecommerce.Models.Product>).Any())
{
    <div class="alert alert-warning">
        <strong>⚠ Stock Alert:</strong> The following products have low stock (less than 05):
        <ul>
            @foreach (var p in ViewBag.LowStockProducts as List<Ecommerce.Models.Product>)
            {
                <li>@p.Name (Quantity: @p.Quantity)</li>
            }
        </ul>
    </div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Quantity</th>
            @if (userRole == "Admin")
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr class="@(product.Quantity < 05 ? "table-danger" : "")">
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>৳@product.Price.ToString("N2")</td>
                <td>
                    @product.Quantity
                    @if (product.Quantity < 05)
                    {
                        <span class="badge bg-danger">Low</span>
                    }
                </td>
                @if (userRole == "Admin")
                {
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
