@model Ecommerce.Models.Product

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <h2 class="text-center text-danger mb-3">Delete Product</h2>
                <hr />
                <p class="text-center fs-5">Are you sure you want to delete this product?</p>

                <div class="mb-4">
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-4">Price</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>

                        <dt class="col-sm-4">Quantity</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Quantity)</dd>
                    </dl>
                </div>

                <form asp-action="Delete" class="d-flex justify-content-between">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger w-45">Delete</button>
                    <a asp-action="Manage" class="btn btn-secondary w-45">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>
