@model Ecommerce.Models.LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "Login - Ma Mamata Store";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<style>
    body {
        background: linear-gradient(135deg, #ffecd2 0%, #fcb69f);
        font-family: Arial, sans-serif;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0;
    }

    .login-card {
        background: #fff;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        width: 100%;
        max-width: 400px;
    }

        .login-card .card-header {
            font-weight: bold;
            font-size: 1.4rem;
            text-align: center;
            margin-bottom: 20px;
            color: #ff4b2b;
        }

    .btn-login {
        background-color: #ff4b2b;
        color: #fff;
        font-weight: bold;
        transition: 0.3s;
    }

        .btn-login:hover {
            background-color: #e03e1b;
        }

    a {
        color: #ff4b2b;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

    .footer-text {
        text-align: center;
        margin-top: 20px;
        font-size: 0.9rem;
        color: #ff4b2b;
    }
</style>

<div class="login-card">
    <div class="card-header">Login to Ma Mamata Store</div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form asp-action="Login" method="post">
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Enter email" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Role" class="form-label">Role</label>
            <select asp-for="Role" class="form-control" required>
                <option value="">Select Role</option>
                <option value="Admin">Admin</option>
                <option value="Customer">Customer</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-login w-100">Login</button>
    </form>

    <p class="text-center mt-3">
        New user? <a asp-controller="Account" asp-action="Register">Create an account</a>
    </p>

    <p class="footer-text">
        Need help? Contact via
        <a href="mailto:abirha3896@gmail.com">Email</a> or
        <a href="https://wa.me/8801701554707" target="_blank">WhatsApp</a>
    </p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
