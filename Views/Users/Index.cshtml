@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<Ecommerce.Models.User>

@{
    ViewData["Title"] = "Users";
    int adminCount = ViewBag.AdminCount ?? 0;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Users</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No users found.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var user in Model)
            {
                bool isLastAdmin = user.Role == Ecommerce.Models.Role.Admin && adminCount <= 1;
                <div class="col-md-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">@user.Name</h5>
                            <p class="card-text mb-1"><strong>Email:</strong> @user.Email</p>
                            <p class="card-text mb-1"><strong>Role:</strong> @user.Role</p>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm text-white">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@user.Id"
                               class="btn btn-danger btn-sm @(isLastAdmin ? "disabled" : "")"
                               aria-disabled="@(isLastAdmin ? "true" : "false")">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
