@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Ecommerce.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="container py-4">
    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Confirm Delete</h4>
        </div>
        <div class="card-body">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <p class="fw-semibold">Are you sure you want to delete this user?</p>

            <dl class="row mb-4">
                <dt class="col-sm-4 fw-semibold">Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4 fw-semibold">Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <!-- Password hidden -->

                <dt class="col-sm-4 fw-semibold">Role</dt>
                <dd class="col-sm-8">@Model.Role</dd>
            </dl>

            <div class="d-flex justify-content-between">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger"
                            @(Model.Role == Ecommerce.Models.Role.Admin && ViewBag.AdminCount <= 1 ? "disabled" : "")>
                        <i class="bi bi-trash-fill"></i> Delete
                    </button>
                </form>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
