<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ma Mamata Varity Store</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

    <style>
        body {
            padding-left: 220px; /* space for sidebar */
            transition: padding-left 0.3s;
        }

        /* Sidebar styles */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 220px;
            height: 100%;
            background-color: #212529;
            color: white;
            overflow-y: auto;
            transition: transform 0.3s;
            z-index: 1040;
        }

            .sidebar.hide {
                transform: translateX(-100%);
            }

            .sidebar .navbar-brand {
                color: #fff;
                padding: 1rem;
                display: block;
                text-decoration: none;
            }

            .sidebar .nav-link {
                color: #ddd;
                padding: 0.75rem 1rem;
            }

                .sidebar .nav-link:hover {
                    background-color: #343a40;
                    color: #fff;
                }

        /* Adjust body when sidebar hidden */
        body.sidebar-hidden {
            padding-left: 0;
        }

        .cart-badge {
            position: absolute;
            top: 0;
            right: -8px;
            transform: translate(50%, -50%);
        }

        .contact-icon {
            transition: transform .3s, color .3s;
        }

            .contact-icon:hover {
                transform: scale(1.2);
                color: #25d366;
            }
    </style>
</head>
<body>
    @* Fetch session info *@
    @{
        var userRole = Context.Session.GetString("UserRole");
        var userId = Context.Session.GetInt32("UserId");
        var userName = Context.Session.GetString("UserName");
        var cartCount = Context.Session.GetInt32("CartCount") ?? 0;
    }

    <!-- Sidebar Navbar -->
    <nav id="sidebar" class="sidebar shadow">
        <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Home")">
            <i class="bi bi-bag-check-fill me-2"></i> Ma Mamata Store
        </a>

        <ul class="navbar-nav flex-column">
            <!-- Direct All Products Link -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Products")">
                    <i class="bi bi-box-seam me-1"></i> All Products
                </a>
            </li>

            @if (userRole == "Admin")
            {
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Manage", "Products")">
                        <i class="bi bi-box-seam me-1"></i> Manage Products
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Manage", "Order")">
                        <i class="bi bi-card-checklist me-1"></i> Manage Orders
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Users")">
                        <i class="bi bi-people-fill me-1"></i> Manage Users
                    </a>
                </li>
            }

            <!-- Search -->
            <li class="nav-item px-3">
                <form asp-controller="Products" asp-action="Search" method="get" class="d-flex mt-2">
                    <input class="form-control me-2" type="search" name="query"
                           placeholder="Search..." aria-label="Search" required />
                    <button class="btn btn-outline-light" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </form>
            </li>

            @if (userRole == "Customer")
            {
                <li class="nav-item mt-3">
                    <a class="nav-link position-relative" href="@Url.Action("Index", "Cart")">
                        <i class="bi bi-cart-fill me-1"></i> Cart
                        @if (cartCount > 0)
                        {
                            <span class="badge bg-danger rounded-pill position-absolute top-0 start-100 translate-middle">
                                @cartCount
                            </span>
                        }
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("MyOrders", "Order")">
                        <i class="bi bi-box-seam me-1"></i> My Orders
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Track", "OrderTracking")">
                        <i class="bi bi-truck me-1"></i> Track Order
                    </a>
                </li>
            }

            @if (userId != null)
            {
                <li class="nav-item mt-3 px-3">
                    <span class="text-light">Hi, <strong>@userName</strong></span>
                    <form asp-controller="Account" asp-action="Logout" method="get" class="m-0 p-0">
                        <button type="submit" class="btn btn-link nav-link p-0 text-light">Logout</button>
                    </form>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Login", "Account")">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Register", "Account")">Sign Up</a>
                </li>
            }
        </ul>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-light mt-5 pt-4 pb-2">
        <div class="container text-center">
            <div class="mb-2"><strong>Need help? Contact us via</strong></div>
            <div class="mb-3 d-flex justify-content-center gap-4">
                <a href="mailto:saifulislam01686935887@gmail.com" class="text-light contact-icon fs-4" title="Email Us">
                    <i class="bi bi-envelope-fill"></i>
                </a>
                <a href="https://wa.me/01686935887" target="_blank"
                   class="text-light contact-icon fs-4" title="Chat on WhatsApp">
                    <i class="bi bi-whatsapp"></i>
                </a>
            </div>
            <div class="small">
                &copy; @DateTime.Now.Year <strong>Ma Mamata Varity Store</strong>. All Rights Reserved.
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        let lastScroll = 0;
        const sidebar = document.getElementById("sidebar");

        window.addEventListener("scroll", () => {
            const currentScroll = window.pageYOffset;

            if (currentScroll > lastScroll) {
                // scrolling down -> hide sidebar
                sidebar.classList.add("hide");
                document.body.classList.add("sidebar-hidden");
            } else {
                // scrolling up -> show sidebar
                sidebar.classList.remove("hide");
                document.body.classList.remove("sidebar-hidden");
            }

            lastScroll = currentScroll <= 0 ? 0 : currentScroll;
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
